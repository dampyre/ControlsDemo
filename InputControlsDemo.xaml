<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ControlsDemo.InputControlsDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="InputControlsDemo">
    <StackLayout>
        <CheckBox IsChecked="True" />
        <Slider
            x:Name="slider"
            Maximum="10"
            MaximumTrackColor="DodgerBlue"
            Minimum="0"
            MinimumTrackColor="Yellow"
            ThumbColor="SpringGreen"
            ValueChanged="slider_ValueChanged" />
        <Label x:Name="lblSlider" />

        <Stepper x:Name="stepper" ValueChanged="stepper_ValueChanged" Maximum="10" Minimum="2" Increment="2"/>
        <Switch IsToggled="True"/>
        <DatePicker/>
        <TimePicker/>
    </StackLayout>
</ContentPage>